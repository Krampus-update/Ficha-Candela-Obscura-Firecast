<?xml version="1.0" encoding="UTF-8"?>
<group>
    <template name='descLabelEditL'>
        <popup name='$(texto)_popup' height='500' width='500' backOpacity='0.5'>
            <richEdit align='client' field="char.$(texto)" backgroundColor="#191a1e"
                defaultFontColor="#ede9da" margins="{top=5,left=5,right=5,bottom=5}" />
        </popup>

        <layout g="col" g-width="3" g-min-height="130">
            <layout g="row" g-min-height="30">
                <button g='col' text="$(texto)" g-width="12">
                    <event name='onClick'>
                        self.$(texto)_popup:show();
                    </event>
                </button>
            </layout>
            <layout g="row" g-min-height="100">
                <richEdit g='col' g-width="12" g-min-height="100" field="char.$(texto)"
                    showToolbar="false" defaultFontSize="13" defaultFontColor="#ede9da"
                    backgroundColor="#191a1e" />
            </layout>
        </layout>
    </template>
</group>