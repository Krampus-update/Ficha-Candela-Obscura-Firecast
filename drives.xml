<?xml version="1.0" encoding="UTF-8"?>
<group>
    <template name='drives'>
        <layout g='row' g-min-height='50'>
            <layout g="col" g-width="5" g-cnt-vert-align="center">
                <label g="col" g-width="12" text='$(drive)' fontColor="#ede9da" />
            </layout>
            <layout g="col" g-width="7" g-cnt-vert-align="center">
                <button g="col" g-width="2" text='-' horzTextAlign="center"
                    onClick="showMessage('- funciona')" />
                <label g="col" g-width="8" text='No Drives' horzTextAlign="center" fontColor="#3d3d3c"/>
                <button g="col" g-width="2" text='+' horzTextAlign="center"
                    onClick="showMessage('+ funciona')" />
            </layout>
        </layout>
        <rectangle g="row" color='#322b23' g-min-height="2" />
        <layout g='row' g-min-height='50'>
            <resistance driveR="$(drive)_r"/>
            <action at="$(one)" />
            <action at="$(two)" />
            <action at="$(three)" />
        </layout>
    </template>
</group>